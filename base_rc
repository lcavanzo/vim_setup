set nocompatible

filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set smartindent
set clipboard=unnamedplus
set history=1000
set incsearch
set hidden 

" Abbreviations
abbr _sh #!/bin/bash
abbr _py #!/usr/sbin/python3

"tab formatting
set list

"set listchars=tab:\|\<Space>
set listchars=tab:>-,space:.,eol:$     " > is shown at the beginning, - throughout
" Set <Leader> key
let mapleader=","

" refresh ctags (this need ctags packet installed)
nnoremap <f5> :!ctags -R<CR>

" check spell 
nnoremap <f6> :set spell<CR>

" Quick save command
" noremap <C-s> :update<CR>
noremap <Leader>s :write<CR>

" Quick quit command
noremap <Leader>q :quit<CR> " Quit current window
noremap <Leader>Q :qa!<CR> " Quit all windows

" Quick expands to the path of the active buffer
cnoremap <expr> %% getcmdtype() == ':' ? expand('%:h').'/' : '%%'

" Splits
noremap <Leader>2 :split<CR> " split horizontally
noremap <Leader>3 :vsplit<CR> " split vertically

" Buffers
noremap <Leader>m :bnext<CR>
noremap <Leader>. <c-^>
noremap <Leader>n :bprevious<CR>
noremap <Leader>x :bdelete<CR>

" Vim tabs
noremap <Leader>t :tabnew<CR>
noremap <Leader>c :tabclose<CR>
noremap <Leader>r :tabnext<CR>
noremap <Leader>e :tabprevious<CR>

" Mute Highlighting
noremap <Leader>l :<c-u>nohlsearch<CR>

" Count the matches of a search
noremap <Leader>/ ::%s///gn<CR>

" Bind Ctrl+<movement> keys to move around windows
map <c-j> <c-w>j
map <c-k> <c-w>k
map <c-l> <c-w>l
map <c-h> <c-w>h
 " Resize the height 
map <c-DOWN> <c-w>+
map <c-UP> <c-w>-
 " Resize the width
map <c-LEFT> <c-w><
map <c-RIGHT> <c-w>>

" Autocomplete

" Show line numbers and length
set ruler
set number
set textwidth=79
set nowrap
set fo-=t
highlight ColorColumn ctermfg=133

filetype off
syntax enable

set nobackup
set nowritebackup
set noswapfile

" Set explorer
noremap <Leader>f :Explore<CR>

" avoid Esc key
imap jj <Esc>


